<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:layout_editor_absoluteY="73dp">

	<com.nodomainfortom.arbitrarycvgenerator.WaveDrawerView
		android:id="@+id/scope_drawing_layout"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginEnd="24dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:background="@android:color/darker_gray"
		android:orientation="horizontal"
		app:layout_constraintBottom_toTopOf="@+id/drawing_instructions_label"
		app:layout_constraintEnd_toStartOf="@+id/return_button"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/drawing_instructions_label"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="4dp"
		android:gravity="center"
		android:text="@string/drawing_instructions_label_text_one_line"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="@+id/scope_drawing_layout"
		app:layout_constraintStart_toStartOf="@+id/scope_drawing_layout" />

	<ToggleButton
		android:id="@+id/cv1_button_draw_fragment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="24dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:textOff="@string/cv1_button_text"
		android:textOn="@string/cv1_button_text"
		app:layout_constraintBottom_toTopOf="@+id/return_button"
		app:layout_constraintEnd_toEndOf="@+id/return_button"
		app:layout_constraintStart_toStartOf="@+id/return_button" />

	<Button
		android:id="@+id/return_button"
		android:layout_width="125dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="24dp"
		android:layout_marginTop="8dp"
		android:text="@string/return_button_text"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ToggleButton
		android:id="@+id/cv2_button_draw_fragment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="24dp"
		android:textOff="@string/cv2_button_text"
		android:textOn="@string/cv2_button_text"
		app:layout_constraintEnd_toEndOf="@+id/return_button"
		app:layout_constraintStart_toStartOf="@+id/return_button"
		app:layout_constraintTop_toBottomOf="@+id/return_button" />

</android.support.constraint.ConstraintLayout>